{
	"files": {
		"ignore": ["./node_modules", "./.next", "./.git"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noRedeclare": "off",
				"noExplicitAny": "off",
				"noArrayIndexKey": "off"
			},
			"style": {
				"noNegationElse": "warn",
				"useNamingConvention": "off",
				"noNonNullAssertion": "off",
				"noUnusedTemplateLiteral": "off"
			},
			"complexity": {
				"useSimplifiedLogicExpression": "warn",
				"noExcessiveCognitiveComplexity": "warn"
			},
			"correctness": {
				"all": true
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"bracketSpacing": true
		}
	}
}
